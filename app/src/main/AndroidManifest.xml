<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kyangc.demoplus" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".app.DemoApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name=".activities.AboutActivity"
            android:label="@string/title_activity_about" >
        </activity>
        <activity
            android:name=".activities.HttpClientActivity"
            android:label="@string/title_activity_http_client" >
        </activity>
        <activity
            android:name=".activities.SnifferActivity"
            android:label="@string/title_activity_sniffer" >
        </activity>

        <service
            android:name=".services.SnifferService"
            android:enabled="true"
            android:exported="false" >
        </service>

        <activity
            android:name=".activities.SnifferDataActivity"
            android:label="@string/title_activity_sniffer_data" >
        </activity>
    </application>

</manifest>
