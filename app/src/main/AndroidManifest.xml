<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.kyangc.demoplus"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".app.DemoApp"
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <!-- Activities -->
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.AboutActivity"
            android:label="@string/title_activity_about"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.HttpClientActivity"
            android:label="@string/title_activity_http_client"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.SnifferActivity"
            android:label="@string/title_activity_sniffer"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.SnifferDataActivity"
            android:label="@string/title_activity_sniffer_data"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.SwipeListItemActivity"
            android:label="@string/title_activity_swipe_list_item"
            android:screenOrientation="portrait" />

        <!-- Services -->
        <service
            android:name=".services.SnifferService"
            android:enabled="true"
            android:exported="false" />

        <activity android:name=".activities.GalleryActivity" />
        <activity
            android:name=".activities.LargeImageActivity"
            android:label="@string/title_activity_large_image"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>
